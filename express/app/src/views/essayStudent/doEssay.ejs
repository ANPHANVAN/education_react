<script>
  const qs = new URLSearchParams(window.location.search);
  const classIdParam = qs.get('class_id');
  const essayId = window.location.pathname.split('/').pop();

  let ESSAY_DATA = null;
  let TIME_LEFT = 0;
  let timerInterval;

  // function pad(n) {
