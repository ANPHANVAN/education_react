<script>

    async function fetchVideo() {
        try {
            const response = await fetch('/video-teacher/api/get-video', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                },
            });
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            const videos = await response.json();
            console.log(videos);
            document.querySelector('.video-teacher-list').innerHTML = videos.map(video => `
                <tr onclick="location.href='/video-teacher/video-detail/${video._id}'" style="cursor: pointer;">
                    <td>${video.video_requirement_name}</td>
                    <td>${video.video_duration}</td>
                    <td> ${video.subject} - ${video.grade}</td>
                    <td>${new Date(video.updatedAt).toLocaleString(
                        'vi-VN', 
                        { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }
                    )}</td>
                </tr>
            `).join('');
        } catch (error) {
            console.error('Error fetching videos:', error);
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        fetchVideo();
    });

</script>