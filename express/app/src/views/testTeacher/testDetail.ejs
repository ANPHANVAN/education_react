<script>
  const testId = new URLSearchParams(window.location.search).get('test-id');
  let testInformation = {}
  fetchTestdata()
    .then(data => {
      if (data) {
        testInformation = data
        console.log('Test testInformation:', testInformation);
      } else {
        console.error('Kh√¥ng t√¨m th·∫•y th√¥ng tin ƒë·ªÅ thi');
      }
